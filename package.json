{
  "name": "node-api",
  "version": "1.0.0",
  "description": "Basic NodeJS API",
  "author": "Adriana Luchian",
  "license": "MIT",
  "homepage": "https://github.com/aluchian/node-api#readme",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "jest --colors --passWithNoTests",
    "tdd": "watch 'npm run lint && npm run test' src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aluchian/node-api.git"
  },
  "devDependencies": {
    "eslint": "~6.8.0",
    "jest": "~25.1.0",
    "watch": "~1.0.2"
  },
  "jest": {
    "rootDir": "src"
  },
  "eslintConfig": {
    "env": {
      "node": 1,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "node_modules/"
    ]
  },
  "dependencies": {
    "express": "~4.17.1"
  }
}
